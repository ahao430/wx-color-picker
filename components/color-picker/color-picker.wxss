.color-picker-container .pick-area .color-picker-bar .picker {
  position: absolute;
  z-index: 10;
  width: 110%;
  height: 10rpx;
  left: 50%;
  transform: translateX(-50%);
  background: #fff;
  border: 2rpx solid #666;
}
.color-picker-container .data-area {
  margin-top: 20rpx;
  font-size: 26rpx;
  display: flex;
  justify-content: space-between;
}

